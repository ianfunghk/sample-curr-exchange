{
    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "MYSQL_DATABASE",
                    "value": "${DB}"
                },
                {
                    "name": "MYSQL_USER",
                    "value": "${DBU}"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "value": "${DBP}"
                },
                {
                    "name": "MYSQL_RANDOM_ROOT_PASSWORD",
                    "value": "1"
                }
            ],
            "essential": true,
            "image": "mariadb:latest",
            "memory": 1024,
            "mountPoints": [
                {
                    "containerPath": "/docker-entrypoint-initdb.d/",
                    "sourceVolume": "_Sql"
                }
            ],
            "name": "db"
        },
        {
            "command": [
                "bash",
                "-c",
                "composer update && rm /var/www/html && ln -s /opt/web /var/www/html && /usr/local/bin/apache2-foreground"
            ],
            "environment": [
                {
                    "name": "HOST",
                    "value": "${DBH}"
                },
                {
                    "name": "DBASE",
                    "value": "${DB}"
                },
                {
                    "name": "USER",
                    "value": "${DBU}"
                },
                {
                    "name": "PASS",
                    "value": "${DBP}"
                }
            ],
            "essential": true,
            "image": "drupal:9-php7.4-apache",
            "memory": 1024,
            "mountPoints": [],
            "name": "drupal",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        },
        {
            "environment": [
                {
                    "name": "PMA_HOST",
                    "value": "${DBH}"
                },
                {
                    "name": "PMA_USER",
                    "value": "${DBU}"
                },
                {
                    "name": "PMA_PASSWORD",
                    "value": "${DBP}"
                },
                {
                    "name": "PMA_ARBITRARY",
                    "value": "1"
                }
            ],
            "essential": true,
            "image": "phpmyadmin/phpmyadmin",
            "memory": 1024,
            "name": "phpmyadmin",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 81
                }
            ]
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "./sql"
            },
            "name": "_Sql"
        }
    ]
}
